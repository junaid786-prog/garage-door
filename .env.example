# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,https://yourdomain.vercel.app

# Security
API_KEY=your-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=a1_garage_dev
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=60000

# Security (for future admin features if needed)
# JWT_SECRET=your-super-secret-key-change-in-production
# JWT_EXPIRES_IN=7d

# API Keys (Placeholder values for pilot)
SERVICETITAN_API_KEY=placeholder_api_key_here
SERVICETITAN_TENANT_ID=placeholder_tenant_id_here

# Redis Configuration
# Use REDIS_URL for cloud providers (includes auth/SSL)
# REDIS_URL=redis://username:password@host:port
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_DB=1

# Event Tracking
GA4_MEASUREMENT_ID=placeholder_ga4_measurement_id
GA4_API_SECRET=placeholder_ga4_api_secret

# Logging Configuration
# LOG_LEVEL: Controls verbosity - error, warn, info, debug
# - Development default: debug (verbose logging for debugging)
# - Production default: warn (only warnings and errors)
# - Test default: error (quiet during tests)
LOG_LEVEL=debug

# LOG_FORMAT: Controls output format
# - pretty: Human-readable, colorized (good for development)
# - json: Machine-parseable JSON (required for production log aggregation)
LOG_FORMAT=pretty

# LOG_TRANSPORT: Where logs are written
# - console: Terminal output (good for development)
# - file: Write to logs/ directory (required for production)
LOG_TRANSPORT=console
